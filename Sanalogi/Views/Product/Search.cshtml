@using X.PagedList;
@using X.PagedList.Mvc.Core;
@using X.PagedList.Web.Common;


@model List<Product>

<div class="row my-3">
    <div class="col-md-3">
        @await Component.InvokeAsync("Categories")
    </div>
    <div class="col-md-9">

        <table class="table table-bordered">
            <tr>
                <th>Ürün Id</th>
                <th>Ürün Adı</th>
                <th>Ürün Fiyatı</th>
            </tr>
            @foreach (var prd in Model)
            {
                <tr>
                    <td>@prd.ProducyId</td>
                    <td>@prd.Name</td>
                    <td>@prd.Price</td>
                </tr>
            }

        </table>
    </div>
</div>
